{
  "name": "mobile-webdriver-automation",
  "version": "1.0.0",
  "description": "Automação de testes para o aplicativo native-demo-app usando WebDriverIO",
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:android": "wdio run ./test/config/wdio.android.conf.js",
