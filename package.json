    "@wdio/cli": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "allure-commandline": "^2.34.1",
    "appium": "^2.2.1",
    "appium-uiautomator2-driver": "^2.34.1",
    "appium-xcuitest-driver": "^5.12.2",
    "chai": "^4.3.10",
    "csv-parser": "^3.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2"
  }
